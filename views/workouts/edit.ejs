<div class="workout-form">
    <h2>Edit Workout</h2>

    <% if (locals.error) { %>
        <div class="message error">
            <%= error %>
        </div>
    <% } %>

    <form action="/workouts/<%= workout._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="type">Workout Type:</label>
            <select id="type" name="type" required>
                <option value="cardio" <%= workout.type === 'cardio' ? 'selected' : '' %>>Cardio</option>
                <option value="strength" <%= workout.type === 'strength' ? 'selected' : '' %>>Strength Training</option>
                <option value="yoga" <%= workout.type === 'yoga' ? 'selected' : '' %>>Yoga</option>
            </select>
        </div>

        <div class="form-group">
            <label for="duration">Duration (minutes):</label>
            <input type="number" id="duration" name="duration" value="<%= workout.duration %>" required>
        </div>

        <div class="form-group">
            <label for="date">Date:</label>
            <input type="date" id="date" name="date" 
                value="<%= workout.date.toISOString().split('T')[0] %>" required>
        </div>

        <div class="form-group">
            <label for="description">Description:</label>
            <textarea id="description" name="description" rows="3"><%= workout.description %></textarea>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn">Update Workout</button>
            <a href="/workouts/<%= workout._id %>" class="btn btn-link">Cancel</a>
        </div>
    </form>
</div>