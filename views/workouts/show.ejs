<div class="workout-details">
    <div class="page-header">
        <h1>Workout Details</h1>
        <div class="actions">
            <a href="/workouts/<%= workout._id %>/edit" class="btn">Edit</a>
            <form action="/workouts/<%= workout._id %>?_method=DELETE" method="POST" class="inline-form">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this workout?')">Delete</button>
            </form>
        </div>
    </div>

    <div class="workout-info">
        <div class="info-group">
            <label>Type:</label>
            <span><%= workout.type.charAt(0).toUpperCase() + workout.type.slice(1) %></span>
        </div>

        <div class="info-group">
            <label>Date:</label>
            <span><%= new Date(workout.date).toLocaleDateString() %></span>
        </div>

        <div class="info-group">
            <label>Duration:</label>
            <span><%= workout.duration %> minutes</span>
        </div>

        <% if (workout.description) { %>
            <div class="info-group">
                <label>Description:</label>
                <p class="description"><%= workout.description %></p>
            </div>
        <% } %>
    </div>

    <div class="navigation">
        <a href="/workouts" class="btn btn-link">Back to Workouts</a>
    </div>
</div>